#devise
  %h1.devise-head Changer de mot de passe
  = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
    = f.error_notification
    #input-devise
      = f.input :reset_password_token, as: :hidden
      = f.full_error :reset_password_token
      = f.input :password, label: t('.new_password', :default => 'Nouveau mot de passe'), required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
      = f.input :password_confirmation, label: t('.confirm_new_password', :default => 'Confirmez votre mot de passe'), required: true
      = f.button :submit, t('.change_my_password', :default => 'Changez mon mot de passe'), class: "button orange green devise little"
  = render "devise/shared/links"
