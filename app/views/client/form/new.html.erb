<div class='container' id='workflow'>
  <section id='form-localize'></section>
  <div class='row'>
    <div class='col-md-6 col-md-offset-3 col-xs-12'>
      <div class='step-head'></div>
      <h2>Remplissez vos coordonnées et obtenez le prix fixe de votre dépannage</h2>
      <%=simple_form_for @user_informations_form, url: intervention_form_create_path do |f| %>

      <p>
        <%= f.label :firstname %>
        <%= f.text_field :firstname%>
        <%= f.error :firstname%>
      </p>
      <p>
        <%= f.label :lastname %>
        <%= f.text_field :lastname %>
        <%= f.error :lastname%>
      </p>
      <p>
        <%= f.label :address1 %>
        <%= f.text_field :address1 %>
        <%= f.error :address1%>
      </p>
      <p>
        <%= f.label :address2 %>
        <%= f.text_field :address2 %>
        <%= f.error :address2%>
      </p>
        <p>
        <%= f.label :zipcode %>
        <%= f.text_field :zipcode %>
        <%= f.error :zipcode%>
      </p>
      <p>
        <%= f.label :city %>
        <%= f.text_field :city %>
        <%= f.error :city%>
      </p>
      <p>
        <%= f.label :phone_number %>
        <%= f.text_field :phone_number %>
        <%= f.error :phone_number%>
      </p>
      <p>
        <%= f.label :email %>
        <%= f.email_field :email %>
        <%= f.error :email %>
      </p>
      <p>
        <%= f.label :intervention_date %>
        <%= f.datetime_select :intervention_date %>
        <%= f.error :intervention_date %>
      </p>
      <p>
        <%= f.submit %>
      </p>
      <% end %>
    </div>
  </div>
</div>
