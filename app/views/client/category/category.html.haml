#workflow.container

  %section#form-localize
  .row
    .col-md-6.col-md-offset-3.col-xs-12
      .step-head

      %h2 Remplissez vos coordonnées et obtenez le prix fixe de votre dépannage
      = form_tag(controller: "category", action: "create", method: "post") do
        = field_set_tag do
          %p
            = label_tag :address1, 'Addresse*'
            = text_field_tag :address1, @address1, label: "addresse"
          %p
            = label_tag :address2, ""
            = text_field_tag :address2, @address2
          %p
            = label_tag :zipcode, 'Code Postal*'
            = text_field_tag :zipcode, @zipcode, label: "codepostal"
          %p
            = label_tag :city, 'Ville*'
            = text_field_tag :city, @city
          %p
            = label_tag :phone_number, 'Tél*'
            = text_field_tag :phone_number, @phone_number
          %p
            = submit_tag 'Valider'
